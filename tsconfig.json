{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,    
    "preserveConstEnums": true,
    "noEmitHelpers": true    
  },
  "files": [
    "angular-ts-decorators.ts"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "src",
    "angular-ts-decorators.d.ts"
  ]
}